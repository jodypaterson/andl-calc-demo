# =============================================================================
# ANDL Demo Calculator - Server Environment Configuration
# =============================================================================
# Copy this file to .env and update values for your environment
# DO NOT commit .env file - it may contain secrets

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Application environment (development|production|test)
NODE_ENV=development

# Server port
PORT=3001

# API base URL
API_BASE_URL=http://localhost:3001

# =============================================================================
# AUTHENTICATION
# =============================================================================

# JWT secret key (min 32 characters in production)
# Generate secure key: openssl rand -base64 32
JWT_SECRET=your-secret-key-here-min-32-characters

# JWT token expiration (e.g., 7d, 24h, 60m)
JWT_EXPIRES_IN=7d

# =============================================================================
# SECURITY
# =============================================================================

# Allowed CORS origin for API requests
CORS_ORIGIN=http://localhost:5173

# Rate limiting window (milliseconds)
RATE_LIMIT_WINDOW_MS=900000

# Max requests per window
RATE_LIMIT_MAX=100

# =============================================================================
# LOGGING (OPTIONAL)
# =============================================================================

# Log level (debug|info|warn|error)
LOG_LEVEL=info
